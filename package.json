{
  "name": "app-presion-arterial",
  "version": "1.0.0",
  "description": "Aplicación para registrar presión arterial",
  "author": "Armando Monge Carreño <armando_ss9@hotmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.noxhealth.apppresionarterial",
    "productName": "NOX Health",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "renderer.js",
      "login.js",
      "profile.js",
      "reminders.js",
      "preload.js",
      "firebase.js",
      "index.html",
      "login.html",
      "profile.html",
      "reminders.html",
      "style.css",
      "logo.png",
      "icon.ico"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.4",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.3.9",
    "firebase": "^11.4.0",
    "html2canvas": "^1.4.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.15",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^24.13.3"
  }
}
